@model BUEnrolment.Models.Subject
@using System.Web.Optimization;

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectNumber)
            @Html.ValidationMessageFor(model => model.SubjectNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxEnrolment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxEnrolment)
            @Html.ValidationMessageFor(model => model.MaxEnrolment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prerequisites)
        </div>
        <div class="editor-field">
            @Html.ListBox("NonPrerequisites", (MultiSelectList)ViewBag.NonPrerequisites)
            @Html.ListBoxFor(model => model.Prerequisites, new MultiSelectList(Model.Prerequisites, "Id", "Name"))
        </div>
            @Html.HiddenFor(model => model.Active)
            @Html.HiddenFor(model => model.Prerequisites)
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
