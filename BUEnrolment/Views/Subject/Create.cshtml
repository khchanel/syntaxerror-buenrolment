@model BUEnrolment.Models.Subject

@using System.Web.Optimization

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectNumber)
            @Html.ValidationMessageFor(model => model.SubjectNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxEnrolment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxEnrolment)
            @Html.ValidationMessageFor(model => model.MaxEnrolment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prerequisites)
        </div>
        <div class="editor-field">
            @Html.ListBox("allSubjects", (MultiSelectList)ViewBag.allSubjects)
            <div id="controls">
                <a onclick="moveItems('allSubjects', 'SelectedPrerequisites');">></a>
                <a onclick="moveItems('SelectedPrerequisites', 'allSubjects');"><</a>
            </div>
            @Html.ListBox("SelectedPrerequisites", new MultiSelectList(new List<String>()))
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" onclick="selectAllItems('SelectedPrerequisites');" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
