@model IList<BUEnrolment.Models.Result>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Student Number")
        </th>
        <th>
            @Html.DisplayName("Mark")
        </th>
        <th></th>
    </tr>
@for (int i = 0; i < ViewBag.subject.EnrolledStudents.Count; i++)
{
        <tr>
        <td>
            @Html.DisplayName((string)ViewBag.subject.EnrolledStudents[i].Username)
        </td>
        <td>
            @Html.EditorFor(model => model[i].Mark)
        </td>
    </tr>
}

</table>

<p>
    <input type="hidden" name="Id" value="@ViewBag.subject.Id" />
    <input type="submit" value="Submit" />
</p>
}
