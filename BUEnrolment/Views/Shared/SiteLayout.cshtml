<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SiteLayout</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Style.css")" />
</head>
<body>
    <div id="container">
        <div id="header_bg">
            <div id="header">
                <h1>UTS</h1>
                <h2>Student Enrollment</h2>
            </div>
        </div>

        <div id="menu" class="clearfix">
            <ul class="clearfix">
                <li class="menuitem"><a href="#">Home</a></li>
                <li class="menuitem"><a href="#">About</a></li>
            </ul>
        </div>
        <div id="main" class="clearfix">
            <div id="leftmenu">
                <ul>
                @if(Roles.IsUserInRole("Admin"))
                {           
                    <li><a href="ListSubjects.aspx">Manage Subjects</a></li>
                    <li><a href="EnrolSubject.aspx">View Requests</a></li>
                }
                else if(Roles.IsUserInRole("Student"))
                {
                    <li><a href="ListSubjects.aspx">Enroled Subject</a></li>
                    <li><a href="EnrolSubject.aspx">Enrol</a></li>
                    <li><a href="Requests.aspx">Create Request</a></li>
                    <li><a href="RequestStatus.aspx">View Requests</a></li>
                    <li><a href="Results.aspx">View Results</a></li>
                }
                </ul>
            </div>
            <div id="content">
                <div id="content_main">
                    @RenderBody()
                </div>
            </div>

        </div>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
